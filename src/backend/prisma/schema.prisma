// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  name      String
  password  String?     // Metodo tradicional
  googleId  String? @unique // Metodo login con Google
  avatar    String?       // Foto de perfil
}

model Juego {
  id          Int      @id @default(autoincrement())
  nombre      String
  imagen      String?
  descripcion String?
  createdAt   DateTime @default(now())
}

model Libro {
  id          Int      @id @default(autoincrement())
  titulo      String
  descripcion String?
  autor       String?
  imagen      String?
  publishedAt DateTime?
  createdAt   DateTime @default(now())
}
